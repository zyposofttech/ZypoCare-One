{
  "name": "zypocare-hims",
  "private": true,
  "packageManager": "pnpm@9.12.2",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "format": "biome format . --write",
    "check": "biome check .",
    "infra:up": "docker compose -f infra/docker/compose.dev.yml up -d",
    "infra:down": "docker compose -f infra/docker/compose.dev.yml down -v",
    "env:localdb": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"Copy-Item -Force .env.localdb .env\"",
    "env:supabase": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"Copy-Item -Force .env.supabase .env\"",
    "db:migrate:deploy": "pnpm -C packages/db exec prisma migrate deploy",
    "db:migrate:dev": "pnpm -C packages/db exec prisma migrate dev",
    "db:generate": "pnpm -C packages/db exec prisma generate",
    "db:studio": "pnpm -C packages/db exec prisma studio"
  },
  "prisma": {
    "schema": "packages/db/prisma/schema.prisma"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "dotenv-cli": "^11.0.0",
    "prisma": "^5.22.0",
    "turbo": "^2.8.4"
  },
  "dependencies": {
    "next": "^16.1.6"
  }
}